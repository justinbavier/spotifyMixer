<% include _header %>
    <div class="container">
      <div class="row">
        <div class="card col-xs-12 col-md-12">
          <div class="row">
            <div class="space-after"></div>
          </div>

          <!-- TOP SECTION -->
          <div class="row">
            <div class="col-xs-12">
            <!-- <div class="col-md-1"></div> -->
            <!-- HEADER -->

                <!-- TITLE -->
                <div class="row">
                  <p class="title text-center col-xs-12">
                    Spotify Mixer
                  </p>
                </div>
                <!-- END TITLE -->

                <!-- DESCRIPTION-->
                <div class="row">
                  <p class="description text-center col-xs-12">
                    Select some genres to get started...
                  </p>
                </div>
                <!-- END DESCRIPTION -->

                <!-- GENRES BUTTON -->
                <div class="row">
                  <div class="col-xs-2">
                  </div>
                  <button class="btn col-xs-8" data-toggle="modal" data-target="#genre-select" onclick="getGenresList();">
                    Choose genres
                  </button>
                  <div class="col-xs-2">
                  </div>
                </div>
                <!-- END GENRES BUTTON -->

              <!-- END HEADER -->

              <div class="row">
                <div class="space-after"></div>
              </div>

              <!-- TRACKS DISPLAY -->
              <div class="row">
                <div id="tracks-display" class="tracks-display col-xs-12 col-md-12">
                  <div class="row">
                    <div id="tracks">
                      <p class="text-center">
                        Your recommended tracks will display here!
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            <!-- END TRACKS DISPLAY -->



            </div>
          </div>
          <!--  END TOP SECTION -->
              <div class="row">
                <div class="d-md-none d-lg-none d-xl-none top-values col-xs-12 col-md-5">

                  <!--  MODE SECTION -->
                  <div class="box col-xs-5">
                    <div class="mode-label-box">
                      <div class="mode-label-content">
                        <div class="mode-label text-center">
                          Mode
                        </div>
                      </div>
                    </div>

                    <div class="mode-text-box">
                      <div class="row">
                        <div class="col-xs-12">

                          <div class="col-xs-4" onclick="getRecommendations();">
                            <label class="switch">
                              <input id="mode-value" type="checkbox" checked />
                              <span class="mode-slider round"></span>
                            </label>
                          </div>

                          <div class="mode-text text-center col-xs-4" id="mode-text">
                            Minor
                          </div>

                        </div>
                      </div>
                    </div>
                  </div>
                  <!--  END MODE SECTION -->

                  <!--  TEMPO SECTION -->
                  <div class="box col-xs-7">

                    <!--  TEMPO VALUE -->
                    <div class="tempo-value-box">
                      <div class="tempo-content">
                        <div class="tempo-label text-center">
                          Tempo: <span class="tempo-value" id="tempo-value"></span>
                        </div>
                      </div>
                    </div>
                    <!-- END TEMPO VALUE -->

                    <!-- TEMPO SLIDER -->
                    <div class="tempo-section">
                      <div class="tempo-slider-spacer"></div>
                      <div class="tempo-slider" id="tempo-slider"></div>
                    </div>
                    <!-- END TEMPO SLIDER -->

                  </div>
                  <!--  END TEMPO SECTION -->

                </div>
              </div>


            <div class="row">
              <div class="top-values col-xs-12 col-md-12">
                <div class="box col-xs-3 col-md-1">

                    <div class="value-box">
                      <div class="value-content">
                          <div class="prefs-value text-center" id="popularity-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Popularity</div>
                      </div>
                    </div>

                    <div id="popularity" class="prefs-section">
                      <div class="slider-spacer"></div>
                        <div class="prefs-slider" id="popularity-slider"></div>
                    </div>


                </div>
                <div class="box col-xs-3 col-md-1">
                    <div class="value-box">
                      <div class="value-content">
                        <div class="prefs-value text-center" id="positivity-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Positivity</div>
                      </div>
                    </div>

                    <div id="positivity" class="prefs-section">
                      <div class="slider-spacer"></div>
                      <div class="prefs-slider" id="positivity-slider"></div>
                    </div>

                </div>
                <div class="box col-xs-3 col-md-1">

                    <div class="value-box">
                      <div class="value-content">
                        <div class="prefs-value text-center" id="energy-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Energy</div>
                      </div>
                    </div>

                    <div id="energy" class="prefs-section">
                      <div class="slider-spacer"></div>
                      <div class="prefs-slider" id="energy-slider"></div>
                    </div>

                </div>
                <div class="box col-xs-3 col-md-1">

                    <div class="value-box">
                      <div class="value-content">
                        <div class="prefs-value text-center" id="acousticness-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Acoustic</div>
                      </div>
                    </div>

                    <div id="acousticness" class="prefs-section">
                      <div class="slider-spacer"></div>
                      <div class="prefs-slider" id="acousticness-slider"></div>
                    </div>

                </div>
                <div class="box col-xs-3 col-md-1">

                    <div class="value-box">
                      <div class="value-content">
                        <div class="prefs-value text-center" id="danceability-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Danceability</div>
                      </div>
                    </div>

                    <div id="danceability" class="prefs-section">
                      <div class="slider-spacer"></div>
                      <div class="prefs-slider" id="danceability-slider"></div>
                    </div>

                </div>
                <div class="box col-xs-3 col-md-1">

                    <div class="value-box">
                      <div class="value-content">
                        <div class="prefs-value text-center" id="instrumentalness-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Instrumental</div>
                      </div>
                    </div>

                    <div id="instrumentalness" class="prefs-section">
                      <div class="slider-spacer"></div>
                      <div class="prefs-slider" id="instrumentalness-slider"></div>
                    </div>

                  </div>
                <div class="box col-xs-3 col-md-1">

                    <div class="value-box">
                      <div class="value-content">
                        <div class="prefs-value text-center" id="liveness-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Liveness</div>
                      </div>
                    </div>

                    <div id="liveness" class="prefs-section">
                      <div class="slider-spacer"></div>
                      <div class="prefs-slider" id="liveness-slider"></div>
                    </div>

                </div>
                <div class="box col-xs-3 col-md-1">

                    <div class="value-box">
                      <div class="value-content">
                        <div class="prefs-value text-center" id="speechiness-value"></div>
                      </div>
                    </div>

                    <div class="label-box">
                      <div class="label-content">
                        <div class="prefs-label text-center">Speechiness</div>
                      </div>
                    </div>

                    <div id="speechiness" class="prefs-section">
                      <div class="slider-spacer"></div>
                      <div class="prefs-slider" id="speechiness-slider"></div>
                    </div>

                </div>
              </div>
            </div>

            <div class="space-after"></div>

            <!-- SUBMIT PANE -->
            <div class="row">
              <div class="col-xs-12">

                <!-- ADD BUTTON -->
                <div class="row">
                  <div class="col-xs-2">
                  </div>
                    <button class="tracks-button btn col-xs-8" id="tracks-button" type="submit" data-toggle="modal" data-target="#success-prompt" onclick="makePlaylist();">
                      Add tracks!
                    </button>
                  <div class="col-xs-2">
                  </div>
                </div>
                <!--  END ADD BUTTON -->

              </div>
            </div>
            <!-- END SUBMIT PANE -->

          </div>
          <!--  BOTTOM OF CARD -->
        </div>

      </div>

        <!--  MODALS -->

          <!-- GENRE MODAL -->
          <div class="modal genre-modal fade" id="genre-select">
            <div class="modal-dialog">
              <div class="modal-content">

                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title text-center">Select genres</h4>
                  <p>Make sure you hit 'Okay' button at bottom!</p>
                </div>

                <div class="modal-body">
                  <div id="genres-list" data-toggle="buttons">
                    <label class="btn">
                      <!-- Buttons for each genre to be appended here -->
                    </label>
                  </div>
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn" data-dismiss="modal" onclick="getRecommendations();">Okay!</button>
                </div>

              </div>
            </div>
          </div>

          <!--  END GENRE MODAL -->

          <!-- PLAYLIST SETUP MODAL -->
          <div class="modal fade" id="playlist-setup">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title">Please provide the following information:</h4>
                </div>
                <div class="form">
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="playlist-name">Playlist Name</label>
                      <input type="text" class="form-control" id="playlist-name" placeholder="Playlist Name">
                    </div>
                    <div class="form-group">
                      <label for="playlist-description">Give your playlist a description...</label>
                      <textarea type="text" class="form-control" id="playlist-description" rows="3"></textarea>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" type="submit" class="btn" data-dismiss="modal" onclick="newPlaylist();">Create Playlist</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- END PLAYLIST SETUP MODAL -->

          <!--  SUCCESS MODAL -->

          <div class="modal fade" id="success-prompt">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title">
                    <p class="text-center">Enter your email address to get the playlist when its all finished!</p>
                  </h4>
                </div>
                <form>
                  <div class="modal-body">
                    <div class="row">
                      <div class="form-group col-sm-6">
                        <label for="FNAME"></label>
                        <input type="text" class="form-control" id="FNAME" placeholder="First Name">
                      </div>
                      <div class="form-group col-sm-6">
                        <label for="LNAME"></label>
                        <input type="text" class="form-control" id="LNAME" placeholder="Last Name">
                      </div>
                    </div>
                    <div class="row">
                      <div class="form-group col-sm-12">
                        <label for="email"></label>
                        <input type="text" class="form-control" id="email" placeholder="Email">
                      </div>
                    </div>
                    <div class="row">
                      <p class="text-center">And check out the playlist so far...</p>
                    </div>
                    <div class="row">
                      <div class="col-sm-3"></div>
                      <div id="spotify-player"></div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal" onclick="submitEmail();">Thank you!</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!--  END SUCCESS MODAL -->

        <!--  END MODALS-->
